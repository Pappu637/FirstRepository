package Academy;

import org.openqa.selenium.By;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.ui.Select;

public class CompanyPage {

	public WebDriver driver;
	public CompanyPage(WebDriver driver) {
		
		this.driver=driver;
	}
	

	
	
	By offices= By.xpath("//select[contains(@id,'//select[contains(@id,'offices-select')]')]");
	
	
	
	public void getScrollDown()
	{
		JavascriptExecutor js = (JavascriptExecutor) driver;
		js.executeScript("window.scrollBy(0,500)", "");
	}
	
	
	public Select selectAllDepartment() {
		
		Select objSelect =new Select(driver.findElement(offices));
		return objSelect;
		//objSelect.selectByIndex(5);
	}

	
}
